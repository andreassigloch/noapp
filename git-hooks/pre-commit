#!/bin/bash
# NoApp Pre-Commit Hook
# Validates specs before committing

echo "ğŸ” NoApp Pre-Commit Hook: Validating specs..."

# Check if specs directory exists
if [ ! -d "specs/" ]; then
    echo "âœ… No specs directory, allowing commit"
    exit 0
fi

# Validate markdown files
specs_valid=true

for file in specs/*.md; do
    if [ -f "$file" ]; then
        echo "ğŸ“‹ Validating: $(basename "$file")"
        
        # Check for basic structure
        if ! grep -q "^#" "$file"; then
            echo "âŒ Missing headers in $file"
            specs_valid=false
        fi
        
        # Check file size (not empty, not too large)
        size=$(wc -c < "$file")
        if [ "$size" -lt 10 ]; then
            echo "âŒ File too small: $file"
            specs_valid=false
        elif [ "$size" -gt 1000000 ]; then
            echo "âš ï¸  Large file detected: $file (${size} bytes)"
        fi
    fi
done

if [ "$specs_valid" = false ]; then
    echo ""
    echo "âŒ Pre-commit validation failed!"
    echo "   Fix the issues above before committing"
    exit 1
fi

echo "âœ… All specs validated successfully"
exit 0